 *      Author: 20109
 */
#include "student.h"

int main()
{
	char choice[40],another_choice[20];
	int exit=0;

	while(exit==0)
	{
		PRINT("Choose one of the following options:\n");
		PRINT("1-Add a Student Record\n");
		PRINT("2-Delete a Student Record\n");
		PRINT("3-View all Student records\n");
		PRINT("4-Delete all Student Records\n");
		PRINT("Enter your choice: ");
		scanf("%s",choice);
		switch(atoi(choice))
		{
		case 1:
			Add_Student();
			break;
		case 2:
			Delete_Student();
			break;
		case 3:
			View_Student();
			break;
		case 4:
			Delete_All_Students();
			break;
		default:
			PRINT("wrong choice!");
			break;
		}
		PRINT("\n-------------------------------------------------\n");
		PRINT("Do you need to choose another option:\n");
		PRINT("1-Yes\n");
		PRINT("2-No\n");
		scanf("%s",another_choice);
		switch(atoi(another_choice))
		{
		case 1:
			exit=0;
			break;
		case 2:
			exit=1;
			break;
		default:
			PRINT("wrong choice!");
			break;
		}
	}
	return 0;
}

