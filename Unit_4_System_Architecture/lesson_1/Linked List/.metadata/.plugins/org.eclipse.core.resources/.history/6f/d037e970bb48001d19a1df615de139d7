#include "student.h"

int main()
{
	char choice[40];
	int exit=0;
	printf("Choose one of the following options:\n");
	printf("1-Add a student Record\n");
	printf("2-Delete a student Record\n");
	printf("Enter your choice: ");
	fflush(stdin);
	fflush(stdout);
	scanf("%s",choice);
	while(exit==0)
	{
		switch(atoi(choice))
		{
		case 1:
			Add_Student();
			break;
		case 2:
			Delete_Student();
			break;
		default:
			printf("wrong choice!");
			break;
		}
		printf("Do you need to choose another option: (y or n)");
		fflush(stdin);
		fflush(stdout);
		scanf("%s",choice);
		if(choice=="y")
		{
			exit=0;
		}
		else if(choice=="n")
		{
			exit=1;
		}
	}
	return 0;
}

