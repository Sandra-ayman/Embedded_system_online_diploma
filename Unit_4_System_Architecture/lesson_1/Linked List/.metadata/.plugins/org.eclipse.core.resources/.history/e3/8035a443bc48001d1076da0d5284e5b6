 */
#include "student.h"

int main()
{
	char choice[40],another_choice[20];
	int exit=0;
	printf("Choose one of the following options:\n");
	printf("1-Add a student Record\n");
	printf("2-Delete a student Record\n");
	printf("Enter your choice: ");
	fflush(stdin);
	fflush(stdout);
	scanf("%s",choice);
	while(exit==0)
	{
		switch(atoi(choice))
		{
		case 1:
			Add_Student();
			break;
		case 2:
			Delete_Student();
			break;
		default:
			printf("wrong choice!");
			break;
		}
		printf("Do you need to choose another option:\n");
		printf("1-Yes\n");
		printf("2-No");
		fflush(stdin);
		fflush(stdout);
		scanf("%s",another_choice);
		switch(atoi(another_choice))
		{
		case 1:
			exit=0;
			break;
		case 2:
			exit=1;
			break;
		default:
			printf("wrong choice!");
			break;
		}
	}
	return 0;
}

