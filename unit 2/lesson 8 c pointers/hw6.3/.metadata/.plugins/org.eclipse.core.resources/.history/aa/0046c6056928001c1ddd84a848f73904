#include<stdio.h>
#include<string.h>
int main()
{
	int i;
	char *p,str[50];
	printf("Input a string : ");
	fflush(stdin);
	fflush(stdout);
	*p=str[0];
	for(i=0;i<strlen(str);i++)
	{
		scanf("%c",str[i]);
		p++;
	}
	printf("Reverse of the string is : ");
	for(i=strlen(str)-1;i>=0;i++)
	{
		printf("%c",*p);
		p--;
	}
	return 0;
}

